# ELD Compliance System - Frontend Environment Variables

# Base URL Configuration (for Vercel deployment)
# Local: /
# Vercel: /frontendELDsystem
VITE_BASE_URL=/

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_NAME="ELD Compliance System"
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_MAPS=true
VITE_ENABLE_PDF_EXPORT=true
VITE_ENABLE_NOTIFICATIONS=true

# Map Configuration (for Leaflet)
VITE_MAP_DEFAULT_CENTER_LAT=39.8283
VITE_MAP_DEFAULT_CENTER_LNG=-98.5795
VITE_MAP_DEFAULT_ZOOM=4

# Development
VITE_DEBUG_MODE=false
VITE_SHOW_DEV_TOOLS=false
